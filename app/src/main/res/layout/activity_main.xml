<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Titre principal -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carnet de Voyage"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E3A29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Sous-titre -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enregistrez et partagez vos voyages"
        android:textSize="14sp"
        android:textColor="#667066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        android:layout_marginTop="4dp" />

    <!-- Bouton Nouveau Voyage -->
    <Button
        android:id="@+id/btnNewVoyage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Nouveau Voyage"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Carte encadrée : Vos voyages -->
    <androidx.cardview.widget.CardView
        android:id="@+id/voyageCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Titre Vos voyages -->
            <TextView
                android:id="@+id/voyagesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📍 Vos voyages"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333333" />

            <!-- Texte Aucun voyage -->
            <TextView
                android:id="@+id/aucunVoyage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Aucun voyage enregistré"
                android:textSize="13sp"
                android:textColor="#888888" />

            <!-- Contenu gris clair avec bouton -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F7F9FB"
                android:elevation="0dp">

                <TextView
                    android:id="@+id/aucunDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vous n'avez encore aucun voyage enregistré"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center" />

                <Button
                    android:id="@+id/btnFirstDrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:text="Créer votre premier voyage"
                    android:backgroundTint="#2196F3"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

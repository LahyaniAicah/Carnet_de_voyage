<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bouton retour (facultatif) -->
        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="← Retour"
            android:textColor="#4E5C6E"
            android:textSize="14sp" />

        <!-- Titre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="Nouveau Voyage"
            android:textColor="#1A1A1A"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Titre du voyage -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre du voyage"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Ex: Escapade à Paris"
            android:padding="12dp" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description (optionnelle)"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:gravity="top"
            android:hint="Décrivez votre voyage..."
            android:padding="12dp" />

        <!-- Label slider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="🕒 Intervalle d'enregistrement GPS"
            android:textStyle="bold" />

        <!-- SeekBar -->
        <SeekBar
            android:id="@+id/seekIntervalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="8"
        android:layout_marginBottom="4dp" />

        <!-- Affichage valeur sélectionnée -->
        <TextView
            android:id="@+id/intervalleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="1 minute"
            android:textColor="#333333" />

        <!-- Info aide -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="L'application enregistrera automatiquement votre position GPS à cet intervalle pendant votre voyage."
            android:textColor="#777777"
            android:textSize="13sp" />

        <!-- Bouton validation -->
        <Button
            android:id="@+id/btnCreerVoyage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:onClick="CreerLancerVoyage"
            android:paddingVertical="12dp"
            android:text="Créer et lancer le voyage"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>

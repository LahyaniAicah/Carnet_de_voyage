<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Bouton retour -->
        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Retour Ã  l'accueil"
            android:textColor="#3B82F6"
            android:textSize="14sp"
            android:paddingBottom="16dp"
            android:textStyle="bold" />

        <!-- Titre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ CrÃ©ez votre voyage"
            android:textColor="#1F2937"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- Nom du voyage -->
        <EditText
            android:id="@+id/inputTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titre du voyage (ex : Escapade Ã  Paris)"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:textColor="#111827"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
        <EditText
            android:id="@+id/inputDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:hint="Description (optionnelle)"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:textColor="#111827"
            android:layout_marginBottom="20dp" />

        <!-- Mode d'enregistrement -->
        <TextView
            android:text="Mode d'enregistrement GPS"
            android:textColor="#374151"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/radioGroupMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioAuto"
                android:text="Automatique"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radioManuel"
                android:text="Manuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp" />
        </RadioGroup>

        <!-- Bloc intervalle -->
        <LinearLayout
            android:id="@+id/sliderLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/intervalleLabel"
                android:text="Intervalle : 1 minute"
                android:textColor="#374151"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/seekIntervalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="8"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="L'application enregistrera automatiquement votre position GPS Ã  cet intervalle."
                android:textColor="#6B7280"
                android:textSize="13sp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <!-- Bouton valider -->
        <Button
            android:id="@+id/btnCreerVoyage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â–¶ï¸ CrÃ©er et dÃ©marrer"
            android:textColor="@android:color/white"
            android:backgroundTint="#10B981"
            android:padding="14dp"
            android:textStyle="bold"
            android:onClick="CreerLancerVoyage" />
    </LinearLayout>
</ScrollView>
